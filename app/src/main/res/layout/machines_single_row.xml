<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    app:strokeColor="@color/primary_color"
    app:strokeWidth="0.2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtSingleRowMachineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="Machine Name"
            android:textAlignment="center"
            android:textColor="@color/primary_color"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSingleRowMachineName">

            <androidx.cardview.widget.CardView
                android:id="@+id/singleRowMachineImageCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/imgSingleRowMachineImage"
                    android:layout_width="160dp"
                    android:layout_height="128dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/singleRowMachineImageCardView"
                android:layout_centerVertical="true"
                >

                <RelativeLayout
                    android:id="@+id/detailOneLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgSingleRowMachineDetailOne"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/txtSingleRowMachineDetailOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imgSingleRowMachineDetailOne"
                        android:text="Detail1"
                        android:textColor="@color/primary_dark" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detailTwoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailOneLayout">


                    <ImageView
                        android:id="@+id/imgSingleRowMachineDetailTwo"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/txtSingleRowMachineDetailTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail1"
                        android:textColor="@color/primary_dark"
                        android:layout_toEndOf="@+id/imgSingleRowMachineDetailTwo" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detailThreeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailTwoLayout">


                    <ImageView
                        android:id="@+id/imgSingleRowMachineDetailThree"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="8dp"
                        android:src="@drawable/circle" />

                    <TextView
                        android:id="@+id/txtSingleRowMachineDetailThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imgSingleRowMachineDetailThree"
                        android:text="Detail1"
                        android:textColor="@color/primary_dark" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>